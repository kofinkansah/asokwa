<% provide(:title, 'Sign up') %>
<h1 class="center" id="try">Sign up </h1>
<br/>
<script>

$('#radical').hide();

$("form input").hide();

//$("#user_name").append( "<span>Enter a name, foo!</span>" );
</script>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %> 
      <%#= the line above renders an error-messages partial on page%>

      <%= f.label :name, id: "ok" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email%>
      <%= f.email_field :email, id: "light", class: 'form-control' %>
  

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <span>Password should have at least 6 characters</span>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <span>Passwords should match</span> 

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>