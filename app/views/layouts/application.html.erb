<!DOCTYPE html>
<html>
<head>
  <title>Asokwa Soccer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<script src="/assets/javascripts/jquery.countdown.min.js"></script>
	<div id="wrap">

	  <nav class="navbar navbar-inverse" role="navigation">
	  	<div class="container-fluid">
	  		<!-- Brand and toggle get grouped for better mobile display -->
	  	  <div class="navbar-header">
	  	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	  	      <span class="sr-only">Toggle navigation</span>
	  	      <span class="icon-bar"></span>
	  	      <span class="icon-bar"></span>
	  	      <span class="icon-bar"></span>
	  	  	</button>
	  	  	<%= link_to 'Asokwa Soccer', root_path, :class => 'navbar-brand' %>
	  	  </div>

	  	  <!-- Collect the nav links, forms and other content for toggling -->
	  	  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	  	  	<ul class="nav navbar-nav">
	  	  	  <li><%= link_to 'See All Stories', root_path %></li>
            <li><%= link_to 'View Fixtures and Results', fixtures_path %></li>
	  	  	</ul>
	  	  	<ul class="nav navbar-nav navbar-right">
	  	  	  <%# if user_signed? %>
	  	  	  <li><%#= link_to 'My Profile', user_path(current_user) %></li>
	  	  	  <li><%#= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
	  	  	  <%# else %>
	  	  	  <li><%= link_to 'Sign in', '#' %></li>
	  	  	  <li><%= link_to 'Sign up', signup_path %></li>
	  	  	  <%# end%>
	  	  	  <li><%= link_to 'Add News Story', new_article_path %></li>
            <li><%= link_to 'Add Fixture or Result', new_fixture_path %></li>
	  	  	  <li><%= link_to 'About', '#' %></li>

	  	  	</ul>
	  	  </div><!--/.nav-collapse -->
	  	</div><!--/.container.fluid -->
	  </nav>
 

<% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
  
<%= yield %>

  
<br class="clr" />

  	</div><!--/.wrap -->
  	<div id="footer">
  	  <div class="container">
				<div class="col-xs-12 col-sm-3">
        	<b>Asokwa Soccer</b>
        	<br />
        	<%= link_to 'News Stories', articles_path %>
        	<br />
        	<%= link_to 'Scores & Fixtures', '#' %>
        	<br />
        	<%= link_to 'Quizzes', '#' %>
      	</div>
				<div class="col-xs-12 col-sm-3">
        	<b>About</b>
        	<br />
        	<%= link_to 'Team', '#' %>
        	<br />
        	<%= link_to 'Careers', '#' %>
        	<br />
        	<%= link_to 'Privacy Policy', '#' %>
      	</div>
      	<div class="col-xs-12 col-sm-3">
        	<b>Contact</b>
        	<br />
        	<i>Site developed by</i>
        	<br />
        	<%= link_to 'Kofi Appiah-Nkansah', 'https://kofinkansah.github.io' %>
        	<br />
        	Raleigh, NC
      	</div>
      	<div class="col-xs-12 col-sm-3 social">
        	<b>Social</b>
        	<br />
        	<%= link_to 'https://github.com/kofinkansah' do %>
          	<%= image_tag 'github.png', :class => 'social-button' %>
        	<% end %>
        	<%= link_to 'https://www.linkedin.com/in/kofi-appiah-nkansah-4125591a' do %>
          	<%= image_tag 'linkedin.png', :class => 'social-button' %>
        	<% end %>
      	</div>
  	  </div>
  	  <%= debug(params) if Rails.env.development? %>
  	</div>

</body>
</html>